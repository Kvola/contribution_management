            <form string="Mettre la tâche en attente">
                <sheet>
                    <group>
                        <field name="task_id" readonly="1"/>
                        <field name="hold_reason" required="1"/>
                        <field name="expected_resume_date"/>
                    </group>
                    <footer>
                        <button name="action_put_on_hold" string="Confirmer la mise en attente" type="object" class="btn-primary"/>
                        <button string="Annuler" class="btn-secondary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
