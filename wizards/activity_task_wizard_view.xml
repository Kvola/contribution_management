    <!-- Wizard d'assignation de tâches -->
    <record id="view_task_assignment_wizard_form" model="ir.ui.view">
        <field name="name">task.assignment.wizard.form</field>
        <field name="model">task.assignment.wizard</field>
        <field name="arch" type="xml">
            <form string="Assigner des tâches">
                <sheet>
                    <group>
                        <field name="activity_id" readonly="1"/>
                        <field name="task_ids" domain="[('activity_id', '=', activity_id), ('assigned_to', '=', False)]" context="{'tree_view_ref': 'group_activity.view_activity_task_tree'}">
                            <tree>
                                <field name="name"/>
                                <field name="deadline"/>
                                <field name="priority"/>
                                <field name="state"/>
                            </tree>
                        </field>
                        <field name="organizer_id" required="1"/>
                    </group>
                    <footer>
                        <button name="action_assign_tasks" string="Assigner les tâches" type="object" class="btn-primary"/>
                        <button string="Annuler" class="btn-secondary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
