    <!-- Vue dashboard pour l'organisation des activités -->
    <record id="view_activity_organization_dashboard" model="ir.ui.view">
        <field name="name">activity.organization.dashboard</field>
        <field name="model">activity.organization.dashboard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="activity_id" readonly="1"/>
                        </h1>
                        <h2>Tableau de Bord d'Organisation</h2>
                    </div>
                    
                    <div class="o_kanban_dashboard">
                        <div class="row">
                            <div class="col-lg-3 col-6">
                                <div class="o_kanban_card_content">
                                    <div class="o_kanban_primary_left">
                                        <div class="o_kanban_gauge">
                                            <field name="organizer_count" class="o_kanban_primary_bottom"/>
                                        </div>
                                    </div>
                                    <div class="o_kanban_primary_right">
                                        <div class="mb4">
                                            <strong>Organisateurs</strong>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-3 col-6">
                                <div class="o_kanban_card_content">
                                    <div class="o_kanban_primary_left">
                                        <div class="o_kanban_gauge">
                                            <field name="task_count" class="o_kanban_primary_bottom"/>
                                        </div>
                                    </div>
                                    <div class="o_kanban_primary_right">
                                        <div class="mb4">
                                            <strong>Total Tâches</strong>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-3 col-6">
                                <div class="o_kanban_card_content">
                                    <div class="o_kanban_primary_left">
                                        <div class="o_kanban_gauge">
                                            <field name="completed_task_count" class="o_kanban_primary_bottom"/>
                                        </div>
                                    </div>
                                    <div class="o_kanban_primary_right">
                                        <div class="mb4">
                                            <strong>Tâches Terminées</strong>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-3 col-6">
                                <div class="o_kanban_card_content">
                                    <div class="o_kanban_primary_left">
                                        <div class="o_kanban_gauge">
                                            <field name="task_completion_rate" widget="percentage" class="o_kanban_primary_bottom"/>
                                        </div>
                                    </div>
                                    <div class="o_kanban_primary_right">
                                        <div class="mb4">
                                            <strong>Avancement</strong>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row" invisible="overdue_task_count == 0">
                            <div class="col-lg-12">
                                <div class="alert alert-warning" role="alert">
                                    <strong>⚠️ Attention: </strong>
                                    <field name="overdue_task_count"/> tâche(s) en retard !
                                </div>
                            </div>
                        </div>
                        
                        <div class="row mt32">
                            <div class="col-lg-12">
                                <div class="card">
                                    <div class="card-header">
                                        <h5>Statut d'Organisation</h5>
                                    </div>
                                    <div class="card-body">
                                        <field name="organization_status" widget="badge" 
                                               decoration-success="organization_status == 'ready'" 
                                               decoration-info="organization_status == 'completed'" 
                                               decoration-warning="organization_status in ['in_progress', 'well_advanced']" 
                                               decoration-danger="organization_status == 'not_started'"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_activity_organization_dashboard" model="ir.actions.act_window">
        <field name="name">Tableau de bord d'Organisation</field>
        <field name="res_model">activity.organization.dashboard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="model_activity_organization_dashboard"/>
    </record>
</odoo>