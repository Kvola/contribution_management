<odoo>
    <!-- Wizard de complétion de tâche -->
    <record id="view_task_completion_wizard_form" model="ir.ui.view">
        <field name="name">task.completion.wizard.form</field>
        <field name="model">task.completion.wizard</field>
        <field name="arch" type="xml">
            <form string="Terminer la tâche">
                <sheet>
                    <group>
                        <field name="task_id" readonly="1"/>
                        <field name="actual_hours" required="1"/>
                        <field name="completion_notes"/>
                        <field name="deliverable_attachments" string="Fichiers de livrables"/>
                    </group>
                    <footer>
                        <button name="action_complete_task" string="Confirmer la completion" type="object" class="btn-primary"/>
                        <button string="Annuler" class="btn-secondary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
