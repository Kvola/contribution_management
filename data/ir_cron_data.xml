<odoo>
    <!-- Tâche de nettoyage des wizards temporaires -->
    <record id="cron_cleanup_allocation_wizards" model="ir.cron">
        <field name="name">Nettoyage wizards allocation</field>
        <field name="model_id" ref="model_installment_allocation_wizard"/>
        <field name="state">code</field>
        <field name="code">model.cleanup_allocation_wizards()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="active" eval="True"/>
        <field name="user_id" ref="base.user_root"/>
    </record>

    <!-- Tâche de mise à jour automatique des configurations -->
    <record id="cron_update_allocation_configs" model="ir.cron">
        <field name="name">Mise à jour configurations allocation</field>
        <field name="model_id" ref="model_member_payment_installment"/>
        <field name="state">code</field>
        <field name="code">model.update_allocation_configs()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="active" eval="True"/>
        <field name="user_id" ref="base.user_root"/>
    </record>

    <!-- Tâche de rapport hebdomadaire -->
    <record id="cron_weekly_allocation_report" model="ir.cron">
        <field name="name">Rapport hebdomadaire allocations</field>
        <field name="model_id" ref="model_member_payment_installment"/>
        <field name="state">code</field>
        <field name="code">model.send_weekly_allocation_report()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">weeks</field>
        <field name="numbercall">-1</field>
        <field name="active" eval="False"/>  <!-- Désactivé par défaut -->
        <field name="user_id" ref="base.user_root"/>
    </record>
</odoo>