<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ================= VUES POUR LES ACTIVITÉS DE GROUPE (MISES À JOUR) ================= -->
    
    <!-- Vue Tree des activités (mise à jour avec dépenses) -->
    <record id="view_group_activity_tree" model="ir.ui.view">
        <field name="name">group.activity.tree</field>
        <field name="model">group.activity</field>
        <field name="arch" type="xml">
            <tree decoration-info="state=='draft'" decoration-success="state=='completed'" 
                  decoration-warning="state=='ongoing'" decoration-muted="state=='cancelled'"
                  decoration-danger="is_over_budget"
                  sample="1">
                <field name="name"/>
                <field name="group_id"/>
                <field name="date_start"/>
                <field name="date_end" optional="hide"/>
                <field name="location" optional="hide"/>
                <field name="cotisation_amount" widget="monetary"/>
                <field name="currency_id" column_invisible="1"/>
                <field name="participant_count"/>
                <field name="max_participants" optional="hide"/>
                <field name="total_members"/>
                <field name="paid_members"/>
                <field name="completion_rate"/>
                <!-- Nouveaux champs financiers -->
                <field name="budget_amount" widget="monetary" optional="hide"/>
                <field name="total_expenses" widget="monetary" optional="hide"/>
                <field name="net_result" widget="monetary" optional="hide"/>
                <field name="is_over_budget" column_invisible="1"/>
                <field name="state" widget="badge" 
                       decoration-info="state=='draft'" 
                       decoration-success="state=='completed'"
                       decoration-warning="state in ['confirmed','ongoing']"
                       decoration-danger="state=='cancelled'"/>
                <field name="company_id" column_invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Vue Form des activités (mise à jour complète) -->
    <record id="view_group_activity_form" model="ir.ui.view">
        <field name="name">group.activity.form</field>
        <field name="model">group.activity</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm" string="Confirmer" type="object" 
                            class="oe_highlight" invisible="state != 'draft'"
                            confirm="Êtes-vous sûr de vouloir confirmer cette activité ? Cela générera les cotisations pour tous les membres du groupe."/>
                    <button name="action_force_confirm" string="Forcer la confirmation" type="object" 
                            invisible="state != 'draft'" groups="base.group_system"
                            confirm="Forcer la confirmation même si la date est passée ?"/>
                    <!-- <button name="action_start_activity" string="Démarrer" type="object" 
                            class="oe_highlight" invisible="state != 'confirmed'"/> -->
                    <button name="action_force_start" string="Forcer le démarrage" type="object" 
                            invisible="state != 'confirmed'" groups="base.group_system"/>
                    <button name="action_complete" string="Terminer" type="object" 
                            class="oe_highlight" invisible="state not in ['confirmed', 'ongoing']"/>
                    <button name="action_cancel" string="Annuler" type="object" 
                            invisible="state == 'completed'"
                            confirm="Êtes-vous sûr de vouloir annuler cette activité ? Les cotisations non payées seront annulées."/>
                    <button name="action_reset_to_draft" string="Remettre en brouillon" type="object" 
                            invisible="state != 'confirmed'"
                            confirm="Attention : toutes les cotisations seront supprimées. Continuer ?"/>
                    <button name="action_duplicate_activity" string="Dupliquer" type="object" 
                            icon="fa-copy"/>
                    <button name="action_send_reminders" string="Envoyer rappels" type="object" 
                            invisible="state not in ['confirmed', 'ongoing']" icon="fa-envelope"/>
                    <!-- Nouveaux boutons pour les dépenses -->
                    <button name="action_check_budget_status" string="Vérifier budget" type="object" 
                            invisible="not budget_amount" icon="fa-calculator"/>
                    <button name="action_financial_report" string="Rapport financier" type="object" 
                            invisible="state == 'draft'" icon="fa-bar-chart"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,ongoing,completed"/>
                    <field name="is_full" invisible="1"/>
                    <field name="has_minimum_participants" invisible="1"/>
                    <field name="is_over_budget" invisible="1"/>
                </header>
                
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_cotisations" type="object" 
                                class="oe_stat_button" icon="fa-money"
                                invisible="state == 'draft'">
                            <field name="total_members" widget="statinfo" string="Total membres"/>
                        </button>
                        <button name="action_view_cotisations" type="object" 
                                class="oe_stat_button" icon="fa-check-circle"
                                invisible="state == 'draft'">
                            <field name="paid_members" widget="statinfo" string="Payé"/>
                        </button>
                        <button name="action_view_unpaid_cotisations" type="object" 
                                class="oe_stat_button" icon="fa-exclamation-triangle"
                                invisible="state == 'draft' or unpaid_members == 0">
                            <field name="unpaid_members" widget="statinfo" string="Impayé"/>
                        </button>
                        <!-- Nouveaux boutons pour les dépenses -->
                        <button name="action_view_expenses" type="object" 
                                class="oe_stat_button" icon="fa-credit-card">
                            <field name="expense_count" widget="statinfo" string="Dépenses"/>
                        </button>
                        <button name="action_add_participants" string="Ajouter participants" type="object" 
                                class="oe_stat_button" icon="fa-user-plus"
                                invisible="state not in ['confirmed', 'ongoing']"/>
                    </div>
                    
                    <!-- Alertes de statut (mises à jour) -->
                    <div class="alert alert-info" role="alert" invisible="state != 'draft'">
                        <p><i class="fa fa-info-circle"/> Cette activité est en brouillon. Confirmez-la pour générer les cotisations.</p>
                    </div>
                    <div class="alert alert-warning" role="alert" invisible="not is_full">
                        <p><i class="fa fa-users"/> Activité complète ! Aucune place disponible.</p>
                    </div>
                    <div class="alert alert-danger" role="alert" invisible="has_minimum_participants or min_participants == 0">
                        <p><i class="fa fa-exclamation-triangle"/> Nombre minimum de participants non atteint 
                           (<field name="participant_count"/>/<field name="min_participants"/>)</p>
                    </div>
                    <!-- Nouvelle alerte pour le budget -->
                    <div class="alert alert-danger" role="alert" invisible="not is_over_budget">
                        <p><i class="fa fa-exclamation-triangle"/> <strong>Dépassement de budget !</strong> 
                           Dépenses: <field name="total_expenses" widget="monetary"/> / Budget: <field name="budget_amount" widget="monetary"/></p>
                    </div>
                    
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="group_id" options="{'no_create': True, 'no_edit': True}"/>
                            <field name="cotisation_amount" widget="monetary"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="location"/>
                        </group>
                        <group>
                            <field name="date_start" required="1"/>
                            <field name="date_end"/>
                            <field name="duration_hours" invisible="not date_end"/>
                            <!-- Nouveau champ budget -->
                            <field name="budget_amount" widget="monetary"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="active" invisible="1"/>
                        </group>
                    </group>
                    
                    <group string="Configuration avancée" name="advanced_config">
                        <group>
                            <field name="max_participants"/>
                            <field name="min_participants"/>
                            <field name="available_spots" invisible="max_participants == 0"/>
                        </group>
                        <group>
                            <field name="auto_confirm"/>
                            <field name="allow_late_registration"/>
                        </group>
                    </group>
                    
                    <field name="description" placeholder="Description de l'activité..."/>
                    
                    <notebook>
                        <page string="Statistiques" name="statistics" invisible="state == 'draft'">
                            <group>
                                <group string="Participation">
                                    <field name="participant_count"/>
                                    <field name="total_members"/>
                                    <field name="paid_members"/>
                                    <field name="unpaid_members"/>
                                    <field name="partial_members"/>
                                    <field name="overdue_members"/>
                                </group>
                                <group string="Montants">
                                    <field name="total_expected" widget="monetary"/>
                                    <field name="total_collected" widget="monetary"/>
                                    <field name="completion_rate" />
                                </group>
                            </group>
                            
                            <!-- Nouvelle section financière -->
                            <group string="Analyse financière" invisible="not budget_amount and not total_expenses">
                                <group string="Budget et dépenses">
                                    <field name="budget_amount" widget="monetary"/>
                                    <field name="total_expenses" widget="monetary"/>
                                    <field name="budget_remaining" widget="monetary"/>
                                    <field name="budget_used_percentage" />
                                </group>
                                <group string="Rentabilité">
                                    <field name="net_result" widget="monetary"/>
                                    <field name="profitability_rate" />
                                    <field name="break_even_participants"/>
                                </group>
                            </group>
                            
                            <!-- Graphique de progression des paiements -->
                            <div class="row" invisible="completion_rate == 0">
                                <div class="col-12">
                                    <h4>Progression des paiements</h4>
                                    <div class="d-flex align-items-center">
                                        <div class="progress flex-grow-1 me-3" style="height: 25px;">
                                            <div class="progress-bar bg-success" role="progressbar" 
                                                 style="width: 0%"
                                                 aria-valuenow="0"
                                                 aria-valuemin="0" 
                                                 aria-valuemax="100">
                                            </div>
                                        </div>
                                        <field name="completion_rate" />
                                    </div>
                                </div>
                            </div>
                        </page>
                        
                        <page string="Cotisations" name="cotisations" invisible="state == 'draft'">
                            <field name="cotisation_ids" context="{'default_activity_id': active_id}">
                                <tree editable="bottom" decoration-success="state=='paid'" 
                                      decoration-warning="state=='partial'" decoration-danger="state=='overdue'"
                                      decoration-muted="not active">
                                    <field name="member_id" readonly="1"/>
                                    <field name="amount_due" widget="monetary" readonly="1"/>
                                    <field name="amount_paid" widget="monetary"/>
                                    <field name="remaining_amount" widget="monetary" readonly="1"/>
                                    <field name="due_date"/>
                                    <field name="payment_date"/>
                                    <field name="state" widget="badge" readonly="1"/>
                                    <field name="active" column_invisible="1"/>
                                    <field name="currency_id" column_invisible="1"/>
                                    <button name="action_record_payment" string="Paiement" type="object" 
                                            icon="fa-money" invisible="state in ['paid', 'cancelled']"
                                            context="{'default_amount': remaining_amount}"/>
                                </tree>
                            </field>
                        </page>
                        
                        <!-- Nouvelle page pour les dépenses -->
                        <page string="Dépenses" name="expenses">
                            <div class="oe_button_box" name="expense_button_box">
                                <button name="action_add_expense" string="Nouvelle dépense" type="object" 
                                        class="btn-primary" icon="fa-plus"/>
                                <button name="action_view_budget_analysis" string="Analyse budgétaire" type="object" 
                                        invisible="not budget_amount" icon="fa-pie-chart"/>
                            </div>
                            
                            <field name="expense_ids" context="{'default_activity_id': active_id}">
                                <tree decoration-success="state=='paid'" decoration-info="state=='approved'"
                                      decoration-warning="state=='submitted'" decoration-danger="state=='rejected'"
                                      decoration-muted="state=='draft'">
                                    <field name="date"/>
                                    <field name="name"/>
                                    <field name="category_id"/>
                                    <field name="partner_id"/>
                                    <field name="amount" widget="monetary"/>
                                    <field name="currency_id" column_invisible="1"/>
                                    <field name="employee_id"/>
                                    <field name="state" widget="badge"/>
                                    <button name="action_submit" string="Soumettre" type="object" 
                                            icon="fa-send" invisible="state != 'draft'"/>
                                    <button name="action_approve" string="Approuver" type="object" 
                                            icon="fa-check" invisible="state != 'submitted'"
                                            groups="base.group_system"/>
                                    <button name="action_mark_paid" string="Marquer payé" type="object" 
                                            icon="fa-money" invisible="state != 'approved'"/>
                                </tree>
                            </field>
                        </page>
                        
                        <page string="Historique" name="history" invisible="state == 'draft'">
                            <group>
                                <group string="Dates importantes">
                                    <field name="confirmation_date" readonly="1"/>
                                    <field name="completion_date" readonly="1"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vue Kanban des activités (mise à jour) -->
    <record id="view_group_activity_kanban" model="ir.ui.view">
        <field name="name">group.activity.kanban</field>
        <field name="model">group.activity</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column" sample="1">
                <field name="name"/>
                <field name="group_id"/>
                <field name="date_start"/>
                <field name="cotisation_amount"/>
                <field name="currency_id"/>
                <field name="completion_rate"/>
                <field name="state"/>
                <field name="participant_count"/>
                <field name="max_participants"/>
                <field name="is_full"/>
                <field name="location"/>
                <!-- Nouveaux champs -->
                <field name="budget_amount"/>
                <field name="total_expenses"/>
                <field name="is_over_budget"/>
                <field name="net_result"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                            <t t-if="record.is_full.raw_value">
                                                <span class="badge badge-warning ms-2">Complet</span>
                                            </t>
                                            <t t-if="record.is_over_budget.raw_value">
                                                <span class="badge badge-danger ms-2">⚠ Budget</span>
                                            </t>
                                        </strong><br/>
                                        <small class="o_kanban_record_subtitle text-muted">
                                            <i class="fa fa-users"/> <field name="group_id"/> • 
                                            <i class="fa fa-calendar"/> <field name="date_start" widget="date"/>
                                            <t t-if="record.location.raw_value">
                                                <br/><i class="fa fa-map-marker"/> <field name="location"/>
                                            </t>
                                        </small>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="row">
                                        <div class="col-6">
                                            <strong><field name="cotisation_amount" widget="monetary"/></strong>
                                        </div>
                                        <div class="col-6 text-end">
                                            <span class="badge badge-secondary">
                                                <field name="participant_count"/>
                                                <t t-if="record.max_participants.raw_value > 0">
                                                    /<field name="max_participants"/>
                                                </t>
                                            </span>
                                        </div>
                                    </div>
                                    
                                    <!-- Informations financières -->
                                    <t t-if="record.budget_amount.raw_value or record.total_expenses.raw_value">
                                        <div class="row mt-1">
                                            <div class="col-12">
                                                <small class="text-muted">
                                                    <t t-if="record.budget_amount.raw_value">
                                                        Budget: <field name="budget_amount" widget="monetary"/>
                                                    </t>
                                                    <t t-if="record.total_expenses.raw_value">
                                                        <br/>Dépenses: <field name="total_expenses" widget="monetary"/>
                                                    </t>
                                                    <t t-if="record.net_result.raw_value and record.state.raw_value != 'draft'">
                                                        <br/>Résultat: <field name="net_result" widget="monetary"/>
                                                    </t>
                                                </small>
                                            </div>
                                        </div>
                                    </t>
                                    
                                    <t t-if="record.completion_rate.raw_value and record.state.raw_value != 'draft'">
                                        <div class="progress mt-2" style="height: 8px;">
                                            <div class="progress-bar" role="progressbar" 
                                                 style="width: 50%"
                                                 aria-valuenow="50"
                                                 aria-valuemin="0" 
                                                 aria-valuemax="100"/>
                                        </div>
                                        <small class="text-muted">
                                            Paiements: <field name="completion_rate" />
                                        </small>
                                    </t>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vue Pivot mise à jour -->
    <record id="view_group_activity_pivot" model="ir.ui.view">
        <field name="name">group.activity.pivot</field>
        <field name="model">group.activity</field>
        <field name="arch" type="xml">
            <pivot string="Analyse des activités" sample="1">
                <field name="group_id" type="row"/>
                <field name="date_start" interval="month" type="col"/>
                <field name="cotisation_amount" type="measure"/>
                <field name="total_collected" type="measure"/>
                <field name="total_expenses" type="measure"/>
                <field name="net_result" type="measure"/>
                <field name="participant_count" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Filtres mis à jour -->
    <record id="view_group_activity_search" model="ir.ui.view">
        <field name="name">group.activity.search</field>
        <field name="model">group.activity</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Nom" filter_domain="[('name', 'ilike', self)]"/>
                <field name="group_id" string="Groupe"/>
                <field name="description" string="Description"/>
                <field name="location" string="Lieu"/>
                <separator/>
                <filter name="draft" string="Brouillon" domain="[('state', '=', 'draft')]"/>
                <filter name="confirmed" string="Confirmées" domain="[('state', '=', 'confirmed')]"/>
                <filter name="ongoing" string="En cours" domain="[('state', '=', 'ongoing')]"/>
                <filter name="completed" string="Terminées" domain="[('state', '=', 'completed')]"/>
                <filter name="cancelled" string="Annulées" domain="[('state', '=', 'cancelled')]"/>
                <separator/>
                <filter name="full" string="Complètes" domain="[('is_full', '=', True)]"/>
                <filter name="has_spots" string="Places disponibles" domain="[('is_full', '=', False), ('max_participants', '>', 0)]"/>
                <filter name="minimum_reached" string="Minimum atteint" domain="[('has_minimum_participants', '=', True)]"/>
                <separator/>
                <!-- Nouveaux filtres financiers -->
                <filter name="with_budget" string="Avec budget" domain="[('budget_amount', '>', 0)]"/>
                <filter name="over_budget" string="Dépassement budget" domain="[('is_over_budget', '=', True)]"/>
                <filter name="profitable" string="Rentables" domain="[('net_result', '>', 0)]"/>
                <filter name="has_expenses" string="Avec dépenses" domain="[('expense_count', '>', 0)]"/>
                <separator/>
                <filter name="active" string="Actives" domain="[('active', '=', True)]"/>
                <filter name="archived" string="Archivées" domain="[('active', '=', False)]"/>
                <separator/>
                <filter name="today" string="Aujourd'hui" 
                        domain="[('date_start', '&gt;=', context_today()),
                                 ('date_start', '&lt;', (context_today() + datetime.timedelta(days=1)).strftime('%%Y-%%m-%%d'))]"/>
                <filter name="this_week" string="Cette semaine" 
                        domain="[('date_start', '&gt;=', (context_today() - datetime.timedelta(days=context_today().weekday())).strftime('%%Y-%%m-%%d')),
                                 ('date_start', '&lt;', ((context_today() - datetime.timedelta(days=context_today().weekday())) + datetime.timedelta(days=7)).strftime('%%Y-%%m-%%d'))]"/>
                <filter name="this_month" string="Ce mois" 
                        domain="[('date_start', '&gt;=', context_today().strftime('%%Y-%%m-01')),
                                 ('date_start', '&lt;', ((context_today().replace(day=1) + datetime.timedelta(days=32)).replace(day=1)).strftime('%%Y-%%m-%%d'))]"/>
                <separator/>
                <filter name="unpaid_cotisations" string="Cotisations impayées" 
                        domain="[('unpaid_members', '&gt;', 0)]"/>
                <filter name="overdue_cotisations" string="Cotisations en retard" 
                        domain="[('overdue_members', '&gt;', 0)]"/>
                <filter name="high_completion" string="Taux élevé (>80%)" 
                        domain="[('completion_rate', '&gt;=', 80)]"/>
                <filter name="low_completion" string="Taux faible (&lt;50%)" 
                        domain="[('completion_rate', '&lt;', 50), ('state', '!=', 'draft')]"/>
                <separator/>
                <filter name="filter_date_start" date="date_start" string="Date de début"/>
                <group expand="0" string="Grouper par">
                    <filter name="group_by_group" string="Groupe" context="{'group_by': 'group_id'}"/>
                    <filter name="group_by_state" string="Statut" context="{'group_by': 'state'}"/>
                    <filter name="group_by_month" string="Mois" context="{'group_by': 'date_start:month'}"/>
                    <filter name="group_by_week" string="Semaine" context="{'group_by': 'date_start:week'}"/>
                    <filter name="group_by_company" string="Société" context="{'group_by': 'company_id'}" groups="base.group_multi_company"/>
                </group>
            </search>
        </field>
    </record>

    <!-- ================= VUES POUR LES DÉPENSES D'ACTIVITÉ ================= -->
    
    <!-- Vue Tree des dépenses -->
    <record id="view_activity_expense_tree" model="ir.ui.view">
        <field name="name">activity.expense.tree</field>
        <field name="model">activity.expense</field>
        <field name="arch" type="xml">
            <tree decoration-success="state=='paid'" decoration-info="state=='approved'"
                  decoration-warning="state=='submitted'" decoration-danger="state=='rejected'"
                  decoration-muted="state=='draft'" sample="1">
                <field name="date"/>
                <field name="name"/>
                <field name="activity_id"/>
                <field name="category_id"/>
                <field name="partner_id"/>
                <field name="employee_id"/>
                <field name="amount" widget="monetary"/>
                <field name="currency_id" column_invisible="1"/>
                <field name="payment_method"/>
                <field name="reference" optional="hide"/>
                <field name="state" widget="badge"/>
                <field name="approver_id" optional="hide"/>
                <field name="approval_date" optional="hide"/>
                <button name="action_submit" string="Soumettre" type="object" 
                        icon="fa-send" invisible="state != 'draft'"/>
                <button name="action_approve" string="Approuver" type="object" 
                        icon="fa-check" invisible="state != 'submitted'"
                        groups="base.group_system"/>
                <button name="action_reject" string="Rejeter" type="object" 
                        icon="fa-times" invisible="state != 'submitted'"
                        groups="base.group_system"/>
                <button name="action_mark_paid" string="Payé" type="object" 
                        icon="fa-money" invisible="state != 'approved'"/>
            </tree>
        </field>
    </record>

    <!-- Vue Form des dépenses -->
    <record id="view_activity_expense_form" model="ir.ui.view">
        <field name="name">activity.expense.form</field>
        <field name="model">activity.expense</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_submit" string="Soumettre" type="object" 
                            class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_approve" string="Approuver" type="object" 
                            class="oe_highlight" invisible="state != 'submitted'"
                            groups="base.group_system"/>
                    <button name="action_reject" string="Rejeter" type="object" 
                            invisible="state != 'submitted'" groups="base.group_system"/>
                    <button name="action_mark_paid" string="Marquer comme payé" type="object" 
                            class="oe_highlight" invisible="state != 'approved'"/>
                    <button name="action_reset_to_draft" string="Remettre en brouillon" type="object" 
                            invisible="state in ['paid']"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,submitted,approved,paid"/>
                </header>
                
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Description de la dépense..."/>
                        </h1>
                    </div>
                    
                    <group>
                        <group>
                            <field name="activity_id" options="{'no_create': True}"/>
                            <field name="date"/>
                            <field name="amount" widget="monetary"/>
                            <field name="currency_id"/>
                            <field name="category_id"/>
                        </group>
                        <group>
                            <field name="partner_id"/>
                            <field name="employee_id"/>
                            <field name="payment_method"/>
                            <field name="reference"/>
                            <field name="is_reimbursable"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    
                    <group string="Approbation" invisible="state == 'draft'">
                        <group>
                            <field name="approver_id" readonly="1"/>
                            <field name="approval_date" readonly="1"/>
                        </group>
                        <group>
                            <field name="rejection_reason" invisible="state != 'rejected'"/>
                        </group>
                    </group>
                    
                    <group string="Justificatifs">
                        <field name="receipt_attachment_ids" widget="many2many_binary" string="Fichiers"/>
                    </group>
                    
                    <field name="notes" placeholder="Notes et commentaires additionnels..."/>
                </sheet>
                
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vue Kanban des dépenses -->
    <record id="view_activity_expense_kanban" model="ir.ui.view">
        <field name="name">activity.expense.kanban</field>
        <field name="model">activity.expense</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column" sample="1">
                <field name="name"/>
                <field name="activity_id"/>
                <field name="date"/>
                <field name="amount"/>
                <field name="currency_id"/>
                <field name="category_id"/>
                <field name="state"/>
                <field name="employee_id"/>
                <field name="partner_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong><br/>
                                        <small class="o_kanban_record_subtitle text-muted">
                                            <i class="fa fa-calendar"/> <field name="date"/>
                                            <t t-if="record.category_id.raw_value">
                                                • <field name="category_id"/>
                                            </t>
                                        </small>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="row">
                                        <div class="col-12">
                                            <strong class="text-primary">
                                                <field name="amount" widget="monetary"/>
                                            </strong>
                                        </div>
                                    </div>
                                    <div class="row mt-1">
                                        <div class="col-12">
                                            <small class="text-muted">
                                                <i class="fa fa-building"/> <field name="activity_id"/>
                                                <t t-if="record.partner_id.raw_value">
                                                    <br/><i class="fa fa-user"/> <field name="partner_id"/>
                                                </t>
                                                <t t-if="record.employee_id.raw_value">
                                                    <br/><i class="fa fa-user-circle"/> <field name="employee_id"/>
                                                </t>
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vue Search des dépenses -->
    <record id="view_activity_expense_search" model="ir.ui.view">
        <field name="name">activity.expense.search</field>
        <field name="model">activity.expense</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Description"/>
                <field name="activity_id" string="Activité"/>
                <field name="category_id" string="Catégorie"/>
                <field name="partner_id" string="Fournisseur"/>
                <field name="employee_id" string="Responsable"/>
                <field name="reference" string="Référence"/>
                <separator/>
                <filter name="draft" string="Brouillon" domain="[('state', '=', 'draft')]"/>
                <filter name="submitted" string="Soumises" domain="[('state', '=', 'submitted')]"/>
                <filter name="approved" string="Approuvées" domain="[('state', '=', 'approved')]"/>
                <filter name="paid" string="Payées" domain="[('state', '=', 'paid')]"/>
                <filter name="rejected" string="Rejetées" domain="[('state', '=', 'rejected')]"/>
                <separator/>
                <filter name="reimbursable" string="Remboursables" domain="[('is_reimbursable', '=', True)]"/>
                <filter name="my_expenses" string="Mes dépenses" domain="[('employee_id.user_ids', 'in', [uid])]"/>
                <filter name="to_approve" string="À approuver" domain="[('state', '=', 'submitted')]" groups="base.group_system"/>
                <separator/>
                <filter name="this_month" string="Ce mois" 
                        domain="[('date', '&gt;=', context_today().strftime('%%Y-%%m-01')),
                                 ('date', '&lt;', ((context_today().replace(day=1) + datetime.timedelta(days=32)).replace(day=1)).strftime('%%Y-%%m-%%d'))]"/>
                <filter name="last_month" string="Mois dernier" 
                        domain="[('date', '&gt;=', ((context_today().replace(day=1) - datetime.timedelta(days=1)).replace(day=1)).strftime('%%Y-%%m-%%d')),
                                 ('date', '&lt;', context_today().strftime('%%Y-%%m-01'))]"/>
                <separator/>
                <filter name="filter_date" date="date" string="Date"/>
                <group expand="0" string="Grouper par">
                    <filter name="group_by_activity" string="Activité" context="{'group_by': 'activity_id'}"/>
                    <filter name="group_by_category" string="Catégorie" context="{'group_by': 'category_id'}"/>
                    <filter name="group_by_state" string="Statut" context="{'group_by': 'state'}"/>
                    <filter name="group_by_employee" string="Responsable" context="{'group_by': 'employee_id'}"/>
                    <filter name="group_by_month" string="Mois" context="{'group_by': 'date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- ================= VUES POUR LES CATÉGORIES DE DÉPENSES ================= -->
    
    <!-- Vue Tree des catégories -->
    <record id="view_expense_category_tree" model="ir.ui.view">
        <field name="name">expense.category.tree</field>
        <field name="model">expense.category</field>
        <field name="arch" type="xml">
            <tree editable="bottom" default_order="sequence,name">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
                <field name="default_budget_percentage" />
                <field name="description"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Vue Form des catégories -->
    <record id="view_expense_category_form" model="ir.ui.view">
        <field name="name">expense.category.form</field>
        <field name="model">expense.category</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options="{'terminology': 'archive'}"/>
                        </button>
                    </div>
                    
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="default_budget_percentage" />
                            <field name="color" widget="color"/>
                        </group>
                    </group>
                    
                    <field name="description" placeholder="Description de la catégorie..."/>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ================= ACTIONS POUR LES DÉPENSES ================= -->
    
    <!-- Action principale des dépenses -->
    <record id="action_activity_expense" model="ir.actions.act_window">
        <field name="name">Dépenses d'activités</field>
        <field name="res_model">activity.expense</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="search_view_id" ref="view_activity_expense_search"/>
        <field name="context">{
            'search_default_draft': 1,
            'search_default_submitted': 1,
            'search_default_approved': 1
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Ajoutez votre première dépense d'activité !
            </p>
            <p>
                Enregistrez et suivez toutes les dépenses liées aux activités de groupe.
                Les dépenses passent par un workflow d'approbation avant d'être comptabilisées.
            </p>
            <p>
                <strong>Workflow :</strong><br/>
                1. Créez la dépense en brouillon<br/>
                2. Soumettez pour approbation<br/>
                3. Approuvez et marquez comme payée
            </p>
        </field>
    </record>

    <!-- Action pour les dépenses à approuver -->
    <record id="action_expenses_to_approve" model="ir.actions.act_window">
        <field name="name">Dépenses à approuver</field>
        <field name="res_model">activity.expense</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="domain">[('state', '=', 'submitted')]</field>
        <field name="context">{'search_default_submitted': 1}</field>
    </record>

    <!-- Action pour mes dépenses -->
    <record id="action_my_expenses" model="ir.actions.act_window">
        <field name="name">Mes dépenses</field>
        <field name="res_model">activity.expense</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="domain">[('employee_id.user_ids', 'in', [uid])]</field>
        <field name="context">{'search_default_my_expenses': 1}</field>
    </record>

    <!-- Action pour les catégories -->
    <record id="action_expense_category" model="ir.actions.act_window">
        <field name="name">Catégories de dépenses</field>
        <field name="res_model">expense.category</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créez votre première catégorie de dépense !
            </p>
            <p>
                Organisez vos dépenses par catégories (transport, restauration, matériel, etc.)
                pour faciliter le suivi et l'analyse budgétaire.
            </p>
        </field>
    </record>

    <!-- ================= WIZARDS ET VUES SPÉCIALISÉES ================= -->
   
    <!-- Actions mises à jour avec nouveaux contextes -->
    <record id="action_group_activity" model="ir.actions.act_window">
        <field name="name">Activités de groupe</field>
        <field name="res_model">group.activity</field>
        <field name="view_mode">kanban,tree,form,calendar,pivot,graph</field>
        <field name="search_view_id" ref="view_group_activity_search"/>
        <field name="context">{
            'search_default_draft': 1,
            'search_default_confirmed': 1,
            'search_default_ongoing': 1,
            'search_default_active': 1
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créez votre première activité de groupe !
            </p>
            <p>
                Les activités permettent d'organiser des événements avec cotisations et dépenses,
                et de suivre la rentabilité automatiquement.
            </p>
            <p>
                <strong>Nouvelles fonctionnalités :</strong><br/>
                • Gestion du budget et des dépenses<br/>
                • Suivi de la rentabilité en temps réel<br/>
                • Workflow d'approbation des dépenses<br/>
                • Rapports financiers détaillés
            </p>
        </field>
    </record>

    <!-- Action pour le tableau de bord financier -->
    <record id="action_activity_financial_dashboard" model="ir.actions.act_window">
        <field name="name">Tableau de bord financier</field>
        <field name="res_model">group.activity</field>
        <field name="view_mode">pivot,graph,tree</field>
        <field name="domain">[('state', '!=', 'draft')]</field>
        <field name="context">{
            'search_default_this_year': 1,
            'group_by': ['date_start:month'],
            'pivot_measures': ['total_collected', 'total_expenses', 'net_result']
        }</field>
    </record>

</odoo>