<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue Liste -->
    <record id="view_member_payment_plan_tree" model="ir.ui.view">
        <field name="name">member.payment.plan.tree</field>
        <field name="model">member.payment.plan</field>
        <field name="arch" type="xml">
            <tree string="Plans de Paiement"
                decoration-info="state=='draft'"
                decoration-warning="state=='in_progress'"
                decoration-success="state=='completed'"
                decoration-muted="state=='cancelled'"
                multi_edit="1">
                <field name="name" />
                <field name="member_id" />
                <field name="total_amount" widget="monetary"
                    options="{'currency_field': 'currency_id'}" />
                <field name="number_of_installments" />
                <field name="frequency" />
                <field name="start_date" />
                <field name="end_date" />
                <field name="paid_installments" />
                <field name="remaining_installments" />
                <field name="completion_rate" widget="progressbar" />
                <field name="state"
                    decoration-info="state=='draft'"
                    decoration-warning="state in ('confirmed', 'in_progress')"
                    decoration-success="state=='completed'"
                    decoration-danger="state=='cancelled'" />
                <field name="currency_id" column_invisible="1" />
            </tree>
        </field>
    </record>

    <!-- Vue Formulaire -->
    <record id="view_member_payment_plan_form" model="ir.ui.view">
        <field name="name">member.payment.plan.form</field>
        <field name="model">member.payment.plan</field>
        <field name="arch" type="xml">
            <form string="Plan de Paiement">
                <header>
                    <button name="action_confirm" type="object" string="Confirmer"
                        class="oe_highlight" invisible="state != 'draft'" />
                    <button name="generate_installments" type="object"
                        string="Générer les échéances"
                        class="btn-secondary" invisible="state != 'draft'" />
                    <button name="action_complete" type="object" string="Terminer"
                        class="btn-success" invisible="state != 'in_progress'" />
                    <button name="action_cancel" type="object" string="Annuler"
                        class="btn-danger" invisible="state in ('completed', 'cancelled')" />
                    <field name="state" widget="statusbar"
                        statusbar_visible="draft,confirmed,in_progress,completed" />
                </header>

                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_view_installments"
                            icon="fa-money">
                            <field string="Échéances" name="paid_installments" widget="statinfo" />
                        </button>
                    </div>

                    <widget name="web_ribbon" title="Annulé" bg_color="text-bg-danger"
                        invisible="state != 'cancelled'" />
                    <widget name="web_ribbon" title="Terminé" bg_color="text-bg-success"
                        invisible="state != 'completed'" />

                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" />
                        <h1>
                            <field name="name" placeholder="Référence du plan" />
                        </h1>
                    </div>

                    <group>
                        <group name="main_info" string="Informations principales">
                            <field name="member_id" options="{'no_create': True, 'no_open': True}" />
                            <field name="total_amount"
                                widget="monetary"
                                options="{'currency_field': 'currency_id'}" />
                            <field name="currency_id" column_invisible="1" />
                            <field name="number_of_installments" />
                            <field name="frequency" />
                        </group>

                        <group name="dates" string="Dates">
                            <field name="start_date" />
                            <field name="end_date" />
                        </group>
                    </group>

                    <group>
                        <group name="fees" string="Frais">
                            <field name="include_fees" />
                            <field name="fee_amount"
                                widget="monetary"
                                options="{'currency_field': 'currency_id'}"
                                invisible="not include_fees"
                                required="include_fees" />
                        </group>

                        <group name="reminders" string="Rappels">
                            <field name="auto_reminder" />
                            <field name="reminder_days"
                                invisible="not auto_reminder"
                                required="auto_reminder" />
                        </group>
                    </group>

                    <!-- Statistiques -->
                    <group name="stats" string="Statistiques" invisible="state == 'draft'">
                        <group>
                            <field name="paid_installments" readonly="1" />
                            <field name="remaining_installments" readonly="1" />
                        </group>
                        <group>
                            <field name="total_paid"
                                widget="monetary"
                                options="{'currency_field': 'currency_id'}"
                                readonly="1" />
                            <field name="completion_rate" widget="progressbar" readonly="1" />
                        </group>
                    </group>

                    <!-- Liste des échéances -->
                    <notebook invisible="not installment_ids">
                        <page string="Échéances" name="installments">
                            <field name="installment_ids" readonly="1" nolabel="1">
                                <list string="Échéances"
                                    decoration-success="state=='paid'"
                                    decoration-warning="state=='overdue'"
                                    decoration-muted="state=='cancelled'"
                                    editable="bottom">
                                    <field name="sequence" />
                                    <field name="due_date" />
                                    <field name="amount" widget="monetary"
                                        options="{'currency_field': 'currency_id'}" />
                                    <field name="amount_paid" widget="monetary"
                                        options="{'currency_field': 'currency_id'}" />
                                    <field name="state" />
                                    <field name="payment_date" />
                                    <field name="currency_id" column_invisible="1" />
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>

                <div class="oe_chatter">
                    <field name="message_follower_ids" />
                    <field name="activity_ids" />
                    <field name="message_ids" />
                </div>
            </form>
        </field>
    </record>

    <!-- Vue Recherche -->
    <record id="view_member_payment_plan_search" model="ir.ui.view">
        <field name="name">member.payment.plan.search</field>
        <field name="model">member.payment.plan</field>
        <field name="arch" type="xml">
            <search string="Rechercher Plans de Paiement">
                <field name="name" string="Référence" />
                <field name="member_id" string="Membre" />
                <field name="total_amount" />

                <filter string="Brouillon" name="draft" domain="[('state', '=', 'draft')]" />
                <filter string="Confirmé" name="confirmed" domain="[('state', '=', 'confirmed')]" />
                <filter string="En cours" name="in_progress"
                    domain="[('state', '=', 'in_progress')]" />
                <filter string="Terminé" name="completed" domain="[('state', '=', 'completed')]" />
                <filter string="Annulé" name="cancelled" domain="[('state', '=', 'cancelled')]" />

                <separator />
                <filter string="Avec rappels" name="with_reminders"
                    domain="[('auto_reminder', '=', True)]" />
                <filter string="Avec frais" name="with_fees" domain="[('include_fees', '=', True)]" />

                <separator />
                <filter string="Ce mois" name="this_month"
                    domain="[('start_date', '&gt;=', context_today().replace(day=1)), ('start_date', '&lt;', (context_today().replace(day=1) + relativedelta(months=1)))]" />
                <filter string="Ce trimestre" name="this_quarter"
                    domain="[('start_date', '&gt;=', context_today().replace(month=((context_today().month-1)//3)*3+1, day=1)), ('start_date', '&lt;', (context_today().replace(month=((context_today().month-1)//3)*3+1, day=1) + relativedelta(months=3)))]" />

                <searchpanel>
                    <field name="state" string="État" select="multi" icon="fa-tasks" />
                    <field name="member_id" string="Membre" limit="100" icon="fa-user" />
                </searchpanel>

                <group expand="0" string="Grouper par">
                    <filter string="État" name="group_state" context="{'group_by': 'state'}" />
                    <filter string="Membre" name="group_member" context="{'group_by': 'member_id'}" />
                    <filter string="Fréquence" name="group_frequency"
                        context="{'group_by': 'frequency'}" />
                    <filter string="Mois de début" name="group_start_month"
                        context="{'group_by': 'start_date:month'}" />
                </group>
            </search>
        </field>
    </record>

    <!-- Vue Kanban -->
    <record id="view_member_payment_plan_kanban" model="ir.ui.view">
        <field name="name">member.payment.plan.kanban</field>
        <field name="model">member.payment.plan</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column" sample="1">
                <field name="name" />
                <field name="member_id" />
                <field name="total_amount" />
                <field name="completion_rate" />
                <field name="state" />
                <field name="currency_id" />
                <field name="color" />
                <progressbar field="state"
                    colors='{"draft": "muted", "confirmed": "warning", "in_progress": "warning", "completed": "success", "cancelled": "danger"}' />
                <templates>
                    <t t-name="kanban-menu">
                        <a role="menuitem" type="edit" class="dropdown-item">Modifier</a>
                        <a role="menuitem" type="delete" class="dropdown-item">Supprimer</a>
                    </t>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_title">
                                    <field name="name" />
                                </div>
                                <div class="o_kanban_record_subtitle">
                                    <i class="fa fa-user" role="img" aria-label="Membre"
                                        title="Membre" />
                                    <field name="member_id" />
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="row">
                                        <div class="col-6">
                                            <strong>
                                                <field name="total_amount" widget="monetary"
                                                    options="{'currency_field': 'currency_id'}" />
                                            </strong>
                                        </div>
                                        <div class="col-6 text-end">
                                            <field name="state" widget="label_selection"
                                                options="{'classes': {'draft': 'secondary', 'confirmed': 'warning', 'in_progress': 'info', 'completed': 'success', 'cancelled': 'danger'}}" />
                                        </div>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="completion_rate" widget="progressbar" />
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <img
                                            t-att-src="kanban_image('res.partner', 'avatar_128', record.member_id.raw_value)"
                                            t-att-title="record.member_id.value"
                                            t-att-alt="record.member_id.value"
                                            class="oe_kanban_avatar o_image_24_cover rounded" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vue Activity -->
    <record id="view_member_payment_plan_activity" model="ir.ui.view">
        <field name="name">member.payment.plan.activity</field>
        <field name="model">member.payment.plan</field>
        <field name="arch" type="xml">
            <activity string="Plans de Paiement">
                <field name="member_id" />
                <templates>
                    <div t-name="activity-box">
                        <img
                            t-att-src="activity_image('res.partner', 'avatar_128', record.member_id.raw_value)"
                            role="img"
                            t-att-title="record.member_id.value"
                            t-att-alt="record.member_id.value" />
                        <div>
                            <field name="name" display="full" />
                            <div t-if="record.member_id.value" class="text-muted">
                                <field name="member_id" muted="1" />
                            </div>
                        </div>
                    </div>
                </templates>
            </activity>
        </field>
    </record>

    <!-- Vue Pivot -->
    <record id="view_member_payment_plan_pivot" model="ir.ui.view">
        <field name="name">member.payment.plan.pivot</field>
        <field name="model">member.payment.plan</field>
        <field name="arch" type="xml">
            <pivot string="Analyse des Plans de Paiement" sample="1">
                <field name="member_id" type="row" />
                <field name="state" type="col" />
                <field name="total_amount" type="measure" />
                <field name="total_paid" type="measure" />
                <field name="completion_rate" type="measure" />
            </pivot>
        </field>
    </record>

    <!-- Vue Graphique -->
    <record id="view_member_payment_plan_graph" model="ir.ui.view">
        <field name="name">member.payment.plan.graph</field>
        <field name="model">member.payment.plan</field>
        <field name="arch" type="xml">
            <graph string="Graphique des Plans de Paiement" type="bar" sample="1">
                <field name="state" />
                <field name="total_amount" type="measure" />
            </graph>
        </field>
    </record>

    <!-- Vue Calendrier -->
    <record id="view_member_payment_plan_calendar" model="ir.ui.view">
        <field name="name">member.payment.plan.calendar</field>
        <field name="model">member.payment.plan</field>
        <field name="arch" type="xml">
            <calendar string="Plans de Paiement"
                date_start="start_date"
                date_stop="end_date"
                color="member_id"
                event_open_popup="1"
                event_limit="5">
                <field name="name" />
                <field name="member_id" filters="1" avatar_field="avatar_128" />
                <field name="total_amount" />
                <field name="state" filters="1" />
            </calendar>
        </field>
    </record>

    <!-- Action pour les plans de paiement -->
    <record id="action_member_payment_plan" model="ir.actions.act_window">
        <field name="name">Plans de Paiement</field>
        <field name="res_model">member.payment.plan</field>
        <field name="view_mode">list,kanban,form,calendar,activity,pivot,graph</field>
        <field name="context">{
            'search_default_in_progress': 1,
            }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer votre premier plan de paiement
            </p>
            <p>
                Les plans de paiement permettent aux membres de régler leurs contributions en
                plusieurs échéances.
                Vous pouvez configurer la fréquence, le nombre d'échéances et activer les rappels
                automatiques.
            </p>
        </field>
    </record>

    <!-- Action pour voir les échéances d'un plan -->
    <record id="action_view_plan_installments" model="ir.actions.act_window">
        <field name="name">Échéances du Plan</field>
        <field name="res_model">member.payment.installment</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('payment_plan_id', '=', active_id)]</field>
        <field name="context">{'default_payment_plan_id': active_id}</field>
    </record>
</odoo>